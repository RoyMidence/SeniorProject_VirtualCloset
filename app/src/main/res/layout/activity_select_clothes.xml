<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SelectClothes">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClothing_outfit"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/emptyImageView_Outfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="153dp"
        android:alpha="0.1"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_hanger" />
    <TextView
        android:id="@+id/textViewEmpty_select"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emptyImageView_Outfit"
        android:layout_alignStart="@+id/emptyImageView_Outfit"
        android:layout_alignEnd="@+id/emptyImageView_Outfit"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:alpha="0.4"
        android:text="TextView"
        android:visibility="visible" />



</RelativeLayout>